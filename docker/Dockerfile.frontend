# Frontend (Next.js)
FROM node:18-alpine as frontend

WORKDIR /app

# Copy package files
COPY package.json package-lock.json* ./

# Install dependencies
RUN npm ci

# Copy application
COPY app ./app
COPY components ./components
COPY public ./public
COPY next.config.js .
COPY tsconfig.json .

# Build Next.js
RUN npm run build

# Expose port
EXPOSE 3000

# Run Next.js
CMD ["npm", "start"]
